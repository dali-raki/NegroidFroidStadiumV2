@page "/DashBoard"
@using UltimateStadium.Services
@inject IDashBoardService dashBoard
<div class="container text-center">
    <div class="row">
        <div class="col">

            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <i class="fa-solid fa-user"></i>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Users</h5>
                            <h1>@usersCount</h1>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col">
    
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <i class="fa-solid fa-user-secret"></i>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Manager</h5>
                            <h1>@managerCount</h1>
                        </div>
                    </div>
                </div>
            </div>
   
        </div>
        <div class="col">


       
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <i class="fa-regular fa-futbol"></i>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Stadium</h5>
                            <h1>@stadiumsCount</h1>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<style>
    .container {
    margin-top: 50px;
}

.row {
    justify-content: center; /* Centers the row items */
}

.card {
    background-color: #f8f9fa; /* Light gray background */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    border: none; /* Removes default border */
    border-radius: 10px; /* Smooth corners */
    transition: transform 0.3s, box-shadow 0.3s; /* Hover effect */
}

.card:hover {
    transform: translateY(-5px); /* Slightly elevate card */
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2); /* Enhance shadow on hover */
}

.card-title {
    font-weight: bold;
    color: #343a40; /* Dark gray for readability */
}

.card-body h1 {
    font-size: 3rem; /* Large font size for numbers */
    color: #007bff; /* Primary blue */
    font-weight: bold;
    margin-top: 10px;
}

i {
    font-size: 3rem; /* Icon size */
    color: #007bff; /* Matches primary blue */
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%; /* Ensures alignment within the column */
}

.col-md-4 {
    padding-top:11vh;
    background-color: #e9ecef; /* Light gray for icon background */
    border-radius: 10px 0 0 10px; /* Matches card corner rounding */
    display: flex;
    align-items: center;
    justify-content: center;
}

.col-md-8 {
    padding: 20px; /* Adds padding for the text content */
    display: flex;
    flex-direction: column;
    justify-content: center;
}

h5 {
    margin-bottom: 0; /* Removes unnecessary space */
}

}

</style>
@code {

    private int managerCount = 0, usersCount = 0, stadiumsCount = 0;

    
    protected override async Task OnInitializedAsync()
    {
       managerCount= await dashBoard.getManagersCount();
       usersCount= await dashBoard.getUsersCount();
       stadiumsCount = await dashBoard.getStadiumsCount();
    }

}